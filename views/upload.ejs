<html>
    <% include components/head.ejs %>
    <body>
        <% include components/menu_and_heading.ejs %>
        <div class="container content">
            <% if (locals.error) { %>
                <div class="alert alert-danger">
                    <%= error %>, please refresh or contact our <a href="mailto:hectorcaesar@hotmail.com">customer service</a>.
                </div>
            <% } %>

            <h1>Upload page. Should only be visible to admins</h1>

            <form action="/upload" method="POST" enctype="multipart/form-data">
                <!-- Upload image -->
                <fieldset class="form-group">
                    <label for="image">Upload image for album</label>
                    <input type="file" class="form-control-file" id="image" name="image" required>
                </fieldset>
                <button type="submit" class="btn btn-default">Upload Album Image</button>
            </form>

            <h3>Upload image for artist:</h3>

            <form action="/upload-artist-image" method="POST" enctype="multipart/form-data">
                <!-- Upload artist image -->
                <fieldset class="form-group">
                    <label for="artist-id">Artist ID:</label>
                    <input class="form-control-file" id="artist-id" name="id" required><br/>
                    <input type="file" class="form-control-file" name="image" required>
                </fieldset>
                <button type="submit" class="btn btn-default">Upload Artist Image</button>
            </form>
        </div>
    </body>
</html>
