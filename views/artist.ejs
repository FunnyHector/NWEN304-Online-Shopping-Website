<html>
    <% include components/head.ejs %>

    <body>
        <% include components/menu_and_heading.ejs %>

        <div class="container content">

            <% if (locals.error) { %>

                <div class="alert alert-danger">
                    <%= error %>, please refresh or contact our <a href="mailto:hectorcaesar@hotmail.com">customer service</a>.
                </div>

            <% } else { %>

                <% if (locals.artist) { %>
                    <div class="left item-page-left">
                        <img src="/image/artists/large/<%= artist.id %>" width="350" alt="artist image"/>
                    </div>

                    <div class="item-page-right">
                        <h1><%= artist.artist_name %></h1>
                        <h3>Profile:</h3>
                        <p>
                            <% if (artist.description) { %>
                                <%- artist.description.replace(/(?:\r\n|\r|\n)/g, '<br/>') %>
                            <% } else { %>
                                No content.
                            <% } %>
                        </p>

                        <% if (locals.albums) { %>
                            <h3>Albums:</h3>
                            <div>
                                <% for (let album of albums) { %>
                                    <span class="item"><a href="/item/<%= album.id %>"><%= album.title %></a></span>
                                <% } %>
                            </div>
                        <% } %>

                    </div>

                <% } else { %>
                    <h2>Ooooops!</h2>
                <% } %>
            <% } %>
        </div>
    </body>
</html>
