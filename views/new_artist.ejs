<html>
    <% include components/head.ejs %>
    <body>
        <% include components/menu_and_heading.ejs %>
        <div class="container content">
            <% if (locals.error.length > 0) {%>
            <div class="alert alert-danger" role="alert"><%= locals.error %></div>
            <% } %>
            <h1>New Artist</h1>
            <div>
                <form action="/add/artist" method="POST" enctype="multipart/form-data">
                    <label>*Upload new image:</label>
                    <input type="file" class="form-control-file" name="image" required>
                    <label>*Name:</label>
                    <input name="artist_name" type="text" required class="form-control" placeholder="" value="">
                    <label>Description:</label>
                    <textarea rows="8" name="description" class="form-control"></textarea>
                    <button class="btn btn-primary btn-large" type="submit">Save</button>
                    <a href="/manage/artists" class="btn btn-primary btn-large" role="button">Cancel</a>
                </form>
            </div>
        </div>
    </body>
</html>
