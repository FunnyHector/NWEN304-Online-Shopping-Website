<body>
<% include components/menu_and_heading.ejs %>
<div class="container content">
    <h1 class="login-heading">Shipping and Billing Details</h1>
    <div class="register-panel left">

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/profile_update" method="post">
            <!--<label>Email Address:</label>-->
            <!--<input name="email" type="email" required class="form-control login-input" placeholder="">-->
            <!--<label>Username:</label>-->
