<html>
    <% include components/head.ejs %>
    <body>
    <% include components/menu_and_heading.ejs %>
        <div class="container content">
            <div class="left item-page-left">
                <img src="/item/image/<%= item.id %>" width="350" alt="image" />
                <a href="#" class="btn btn-primary btn-large max-width item-button" role="button">Add to cart</a>
                <a href="#" class="btn btn-primary btn-large max-width item-button" role="button">Add to wishlist</a>
            </div>
            <div class="item-page-right">
                <h1><%= title%></h1>
                <h4 class="artist page-label"><%= item.artist_name %></h4>
                <h3>$<%= item.price %></h3>
                <p>Genre: <%= item.genre %></p>
                <p>Description: <%= item.description %></p>
            </div>
        </div>
    </body>
</html>